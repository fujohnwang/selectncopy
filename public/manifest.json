{
  "name": "SelectnCopy",
  "manifest_version": 3,
  "version": "0.0.1",
  "author": "fujohnwang",
  "description": "evaluate selector expression and copy results to clipboard as needed",
  "permissions": [
    "activeTab",
    "tabs",
    "scripting",
    "notifications",
    "tts"
  ],
  "action": {
    "default_icon": "icon.jpg",
    "default_popup": "index.html"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+C",
        "mac": "MacCtrl+Shift+C"
      }
    }
  }
}
